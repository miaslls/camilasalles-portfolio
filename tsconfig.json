{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["./app/api/*"],
      "@lib/*": ["./app/_lib/*"],
      "@data/*": ["./app/_data/*"],
      "@components/*": ["./app/_components/*"],
      "@providers/*": ["./app/_providers/*"],
      "@images/*": ["./public/images/*"],
      "@icons/*": ["./public/icons/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/_providers/theme-provider.jsx"
  ],
  "exclude": ["node_modules"]
}
